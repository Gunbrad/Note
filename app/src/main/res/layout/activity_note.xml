<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.note.NoteActivity">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <!-- 主工具栏 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- 编辑工具栏 -->
        <HorizontalScrollView
            android:id="@+id/edit_toolbar_scroll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:gravity="center_vertical">

                <!-- 行列操作 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_row_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:text="+ 行"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_column_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="+ 列"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp" />

                <!-- 分割线 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/colorOutline" />

                <!-- 删除向下填充按钮 -->

                <!-- 撤销重做 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/undo_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:text="撤销"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/redo_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="重做"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- DataGrip风格表格主体 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 表格网格容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 顶部行：左上角空白 + 列头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#E9ECEF">

                <!-- 左上角空白区域 -->
                <View
                    android:id="@+id/corner_view"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#CED4DA"
                    android:layout_marginEnd="1dp" />

                <!-- 列头滚动区域 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/column_headers_recycler"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E9ECEF"
                    android:scrollbars="none"
                    android:overScrollMode="never" />

            </LinearLayout>

            <!-- 水平分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ADB5BD" />

            <!-- 表格数据区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- 行头列（冻结） -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/row_headers_recycler"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#F8F9FA"
                    android:layout_marginEnd="1dp"
                    android:scrollbars="none"
                    android:overScrollMode="never" />

                <!-- 数据单元格区域 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/data_grid_recycler"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:scrollbars="none"
                    android:overScrollMode="never" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 空状态提示 -->
    <LinearLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_grid"
            android:alpha="0.3"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击 + 添加行或列开始编辑表格"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- 加载指示器 -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>