<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="?attr/colorControlHighlight"
    app:strokeWidth="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 左上角图标 -->
        <ImageView
            android:id="@+id/notebook_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_notebook_24"
            android:contentDescription="笔记本图标"
            app:tint="?attr/colorPrimary" />

        <!-- 右上角更多按钮 -->
        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="更多选项"
            android:padding="2dp"
            android:src="@drawable/ic_more_vert_24"
            app:tint="?attr/colorOnSurfaceVariant" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notebook_icon"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="民宿房间信息表" />

        <!-- 左下角：长*宽 -->
        <TextView
            android:id="@+id/dimensions_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            tools:text="10×5" />

        <!-- 右下角：更新时间 -->
        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            tools:text="2小时前" />

        <!-- 隐藏的状态图标（用于置顶等状态） -->
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/notebook_icon"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="状态图标"
            android:visibility="gone"
            app:tint="?attr/colorPrimary"
            tools:src="@drawable/ic_pin_24" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>